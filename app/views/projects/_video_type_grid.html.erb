<div class="mb-4">
  <label class="form-label fw-semibold">Choose Video Types</label>
  <div class="row row-cols-1 row-cols-md-2 g-3">
    <% @video_types.each do |video_type| %>
      <div class="col">
        <div class="form-check border rounded p-3 h-100 shadow-sm">
          <%= check_box_tag "video_type_ids[]", video_type.id, false,
              class: "form-check-input me-2",
              id: "video_type_ids_#{video_type.id}",
              data: { payment_target: "checkbox" } %>

          <%= label_tag "video_type_ids_#{video_type.id}",
              "#{video_type.name} ($#{video_type.price})",
              class: "form-check-label" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-3">
    <p class="text-end fs-5">
      Total Due:
      <strong data-payment-target="amount">$0.00</strong>
    </p>
  </div>
</div>
