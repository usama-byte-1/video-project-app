<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Your Projects</h2>
    <%= link_to "Order New Project", new_project_path, class: "btn btn-primary" %>
  </div>

  <% if @projects.any? %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @projects.each do |project| %>
        <div class="col">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title text-primary"><%= project.name %></h5>
              <p class="card-subtitle mb-2 text-muted">Status: <%= project.status.capitalize %></p>

              <% if project.videos.any? %>
                <h6 class="mt-3">Videos Ordered:</h6>
                <ul class="list-group list-group-flush">
                  <% project.videos.each do |video| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <%= video.video_type.name %>
                      <span class="badge bg-success">$<%= video.video_type.price %></span>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="mt-3 text-muted">No videos ordered yet.</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-4">
      No projects found. <%= link_to "Create one now", new_project_path, class: "alert-link" %>.
    </div>
  <% end %>
</div>
